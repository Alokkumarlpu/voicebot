# .env.example - Copy to .env and fill in values

# Server Configuration
NODE_ENV=development
PORT=5000

# Brain Service (Python API)
BRAIN_SERVICE_URL=http://localhost:8000

# Thresholds
CONFIDENCE_THRESHOLD=0.7
SENTIMENT_NEGATIVE_THRESHOLD=-0.3

# Database (when using real DB)
# DATABASE_URL=mongodb://localhost:27017/voicebot

# LLM API (when integrating OpenAI, etc)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4

# CRM Integration (Jarvis)
# JARVIS_API_KEY=...
# JARVIS_ENDPOINT=...

# Debug Mode
DEBUG=false
